[user]
    name = Dustin Lagoy
	email = dustin.lagoy@nrc-cnrc.gc.ca
[log]
    date = short
[format]
    pretty = "%C(yellow) %h%Creset%C(red)%d%Creset %Cgreen%cd%Creset %s %Cgreen(%cr) %C(blue)<%an>%Creset"
[alias]
    l = log --branches --remotes --tags --graph --notes HEAD -n 17
    d = difftool
[pager]
    log = "perl /usr/share/doc/git/contrib/diff-highlight/diff-highlight | less"
    show = "perl /usr/share/doc/git/contrib/diff-highlight/diff-highlight | less"
    diff = "perl /usr/share/doc/git/contrib/diff-highlight/diff-highlight | less"
[interactive]
    diffFilter = "perl /usr/share/doc/git/contrib/diff-highlight/diff-highlight"
[core]
    autocrlf = false
    safecrlf = true
    eol = lf
[merge]
    tool = vimdiff
    ff = false
[pull]
    ff = only
[color]
    ui = auto
[init]
    defaultBranch = main
[credential]
	helper = cache --timeout=600
[diff]
    tool = icdiff
[difftool]
    prompt = false
[difftool "icdiff"]
    cmd = /usr/bin/icdiff --truncate --line-numbers $LOCAL $REMOTE
[push]
	followTags = true
[tag]
    sort = v:refname
[blame]
    coloring=repeatedLines
    coloring=highlightRecent
[color "blame"]
    # light gray
    repeatedLines = 145
