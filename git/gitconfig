[user]
    name = Dustin Lagoy
	email = dustin@lagoy.org
[log]
    date = "format-local:%y-%m-%d %H:%m"
[format]
    pretty = "%C(yellow)%h%Creset %C(green)%cd%Creset %C(auto)%D%Creset\n    %s %C(blue)<%an>"
[alias]
    l = !git log --branches --remotes --tags --graph --notes HEAD -n 17 --color=always | sed -e 's,*,●,' -e 's,|\\x1b,│\\x1b,g' -e 's,/\\x1b,╱\\x1b,g' -e 's,\\\\\\x1b,╲\\x1b,g'
    d = difftool
[pager]
    log = "$HOME/dotfiles/git/pager.sh | less"
    show = "$HOME/dotfiles/git/pager.sh | less"
    diff = "$HOME/dotfiles/git/pager.sh | less"
[interactive]
    diffFilter = "$HOME/dotfiles/git/pager.sh"
[core]
    autocrlf = false
    safecrlf = true
    eol = lf
[merge]
    tool = vimdiff
    ff = false
[pull]
    ff = only
[color]
    ui = auto
[init]
    defaultBranch = main
[credential]
	helper = cache --timeout=600
[diff]
    tool = icdiff
[difftool]
    prompt = false
[difftool "icdiff"]
    cmd = /usr/bin/icdiff --truncate --line-numbers $LOCAL $REMOTE
[push]
	followTags = true
[tag]
    sort = v:refname
[blame]
    coloring=repeatedLines
    coloring=highlightRecent
    date = "format-local:%y-%m-%d %H:%m"
[color "blame"]
    # light gray
    repeatedLines = 145
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
